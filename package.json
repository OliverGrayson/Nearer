{
  "name": "nearer-client",
  "version": "1.0.0",
  "description": "A client for Blacker house's speaker system (Nearer).",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "Ethan Jaszewski",
  "license": "MPL-2.0",
  "dependencies": {
    "fluent-ffmpeg": "^2.1.2",
    "jquery": "^3.3.1",
    "lame": "^1.2.4",
    "moment": "^2.20.1",
    "socket.io-client": "^2.0.4",
    "speaker": "^0.4.0",
    "through2": "^2.0.3",
    "ytdl-core": "^0.18.7"
  },
  "devDependencies": {
    "electron": "^1.7.11",
    "electron-builder": "^19.55.3",
    "eslint": "^4.16.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0"
  },
  "build": {
    "appId": "nearer-client",
    "productName": "Nearer",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.png"
    }
  }
}
